{
    "name": "gennadyx/php-shop-logistics.ru-api",
    "description": "php-shop-logistics.ru-api composer package",
    "keywords": ["shop-logistics.ru", "rpc", "remote", "api"],
    "homepage": "https://github.com/gennadyx/php-shop-logistics.ru-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Gennady Knyazkin",
            "email": "dev@gennadyx.tech",
            "homepage": "https://github.com/gennadyx"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "myclabs/php-enum": "^1.5",
        "php-http/httplug": "^1.1",
        "php-http/message-factory": "^1.0"
    },
    "require-dev": {
        "php-http/client-common": "^1.4",
        "php-http/curl-client": "^1.6",
        "phpunit/phpunit" : "~5.7",
        "php-http/mock-client": "^0.3",
        "squizlabs/php_codesniffer": "^2.3",
        "zendframework/zend-diactoros": "^1.3",
        "symfony/serializer": "^3.2"
    },
    "suggest": {
        "symfony/serializer": "For using xml encoder/decoder from serializer component" 
    },
    "autoload": {
        "psr-4": {
            "Gennadyx\\ShopLogisticsRu\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gennadyx\\ShopLogisticsRu\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit --configuration ./phpunit.xml.dist --coverage-clover=coverage.clover"
    }
}
